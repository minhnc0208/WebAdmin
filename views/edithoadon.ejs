                    <button type="submit" class="btn btn-primary"  onclick="location.href='/hoadon'">Lưu</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"
                        onclick="location.href='/hoadon'">Hủy</button>
                </div>

            </form>
