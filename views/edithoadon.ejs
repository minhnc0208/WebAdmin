        <div class="contents">
            <div class="contents-title">
                <h2>Cập nhật thông tin hóa đơn</h2>
               
            </div>



            <!-- display modal edit information user -->


            <form action="/updateHoaDon" method="POST" autocomplete="off" enctype="multipart/form-data" style="margin: 0 20px;">

                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Mã hóa đơn:</label>
                    <input type="text" class="form-control" id="recipient-name" name="MaHoaDon" readonly="readonly" value="<%= hoadonCanUpdate.billid %>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Ngày tạo hóa đơn:</label>
                    <input type="text" class="form-control" id="recipient-name" name="NgayTao" readonly="readonly" value="<%= hoadonCanUpdate.date %>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Địa chỉ:</label>
                    <input type="text" class="form-control" id="recipient-name" name="DiaChi" value="<%= hoadonCanUpdate.address %>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Phương thức thanh toán:</label>
                    <select class="form-control form-control-sm"  name="ThanhToan"  value="<%= hoadonCanUpdate.payments %>">
                        <option  value="PAYAL">Thẻ tín dụng</option>
                        <option  value="CASH ON DELIVERY">Tiền mặt</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Trạng thái:</label>
                    <select class="form-control form-control-sm"  name="TrangThai" value="<%= hoadonCanUpdate.state %>">
                        <option  value="Pending">Pending</option>
                        <option  value="Approved">Approved</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Tổng giá:</label>
                    <input type="text" class="form-control" id="recipient-name" name="TongGia"  readonly="readonly" value="<%= hoadonCanUpdate.total %>">
                </div>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Tên khách hàng:</label>
                    <input type="text" class="form-control" id="recipient-name" name="TenDangNhap" readonly="readonly" value="<%= hoadonCanUpdate.username %>">
                </div>
                <!-- <form method="post" enctype="multipart/form-data" action="/uploadphoto"> -->
                <!-- <label for="recipient-name" class="col-form-label" style="font-weight: bold;"> Ảnh hóa đơn:</label> -->
                <br>
                <br>
                
                <!-- <input type="file" name="myImageEdit" accept="image/*"> -->

                <!-- <input type="submit" value="Upload Photo"> -->
