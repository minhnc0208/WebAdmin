      <div class="contents">
        <div class="contents-title">
          <h2>Cập nhật thông tin loại món ăn</h2>
        </div>

        <!-- display modal edit information user -->

        <form
          action="/updateLoaiProduct"
          method="POST"
          autocomplete="off"
          enctype="multipart/form-data"
          style="margin: 0 20px"
        >
          <div class="form-group">
            <label
              for="recipient-name"
              class="col-form-label"
              style="font-weight: bold"
              
            >
              Mã phân loại món ăn:</label
            >
            <input
              type="text"
              class="form-control"
              id="recipient-name"
              name="MaPhanLoaiMonAn"
              readonly="readonly"
              value="<%= loaimonanCanUpdate.mPLMA %>"
              
            />
          </div>

          <div class="form-group">
            <label
              for="recipient-name"
              class="col-form-label"
              style="font-weight: bold"
              
            >
              Mã món ăn:</label
            >
            <input
              type="text"
              class="form-control"
              id="recipient-name"
              name="MaMonAn"
              readonly="readonly"
              value="<%= loaimonanCanUpdate.maMonAn %>"
            />
          </div>

          <div class="form-group">
            <label
              for="recipient-name"
              class="col-form-label"
              style="font-weight: bold"
            >
               Loại món ăn:</label
            >
            <input
              type="text"
              class="form-control"
              id="recipient-name"
              name="LoaiMonAn"
              value="<%= loaimonanCanUpdate.loaiMon %>"
              readonly="readonly"
            />
          </div>

          <div class="form-group">
            <label
              for="recipient-name"
              class="col-form-label"
              style="font-weight: bold"
            >
              Phân loại món ăn:</label
            >
            <!-- <input
              type="text"
              class="form-control"
              id="recipient-name"
              name="PhanLoaiMonAn"
              value="<%= loaimonanCanUpdate.plma %>"
              readonly="readonly"
            /> -->
            <select class="form-control form-control-sm" name="PhanLoaiMonAn" value="<%= loaimonanCanUpdate.plma %>">
              <option value="Món khai vị">Món khai vị</option>
             <option value="Món chay">Món chay</option>
             <option value="Món ăn sáng">Món ăn sáng</option>
             <option value="Thức uống">Thức uống</option>
             <option value="Món ăn cho trẻ">Món ăn cho trẻ</option>
             <option value="Món tráng miệng">Món tráng miệng</option>
             <option value="Món chính">Món chính</option>
             <option value="Nhanh và dễ">Nhanh và dễ</option>
             <option value="Bánh">Bánh</option>
             <option value="Món nhậu">Món nhậu</option>
             <option value="Món ăn thịnh hành">Món ăn thịnh hành</option> 
         </select>
          </div>
        
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Phân loại món ăn cập nhật:</label> 
           <!-- <input type="text" class="form-control" id="recipient-name" name="email">  -->
             <select class="form-control form-control-sm" name="PhanLoaiMonAnCapNhat" value="<%= loaimonanCanUpdate.phanLoai %>">
                 <option value="Món khai vị">Món khai vị</option>
                <option value="Món chay">Món chay</option>
                <option value="Món ăn sáng">Món ăn sáng</option>
                <option value="Thức uống">Thức uống</option>
                <option value="Món ăn cho trẻ">Món ăn cho trẻ</option>
                <option value="Món tráng miệng">Món tráng miệng</option>
                <option value="Món chính">Món chính</option>
                <option value="Nhanh và dễ">Nhanh và dễ</option>
                <option value="Bánh">Bánh</option>
                <option value="Món nhậu">Món nhậu</option>
                <option value="Món ăn thịnh hành">Món ăn thịnh hành</option> 
            </select>
          </div> 
